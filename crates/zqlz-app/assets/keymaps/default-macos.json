[
  {
    "bindings": {
      "cmd-,": "zqlz::OpenSettings",
      "cmd-q": "zqlz::Quit",
      "cmd-r": "zqlz::Refresh",
      "cmd-shift-p": "zqlz::OpenCommandPalette"
    }
  },
  {
    "context": "MainView",
    "bindings": {
      "cmd-n": "zqlz::NewQuery",
      "cmd-shift-n": "zqlz::NewConnection",
      "cmd-enter": "zqlz::ExecuteQuery",
      "cmd-b": "zqlz::ToggleLeftSidebar",
      "cmd-shift-b": "zqlz::ToggleRightSidebar",
      "cmd-j": "zqlz::ToggleBottomPanel",
      "cmd-1": "zqlz::FocusSidebar",
      "cmd-2": "zqlz::FocusEditor",
      "cmd-3": "zqlz::FocusResults",
      "cmd-shift-]": "tabs::ActivateNextTab",
      "cmd-shift-[": "tabs::ActivatePrevTab",
      "cmd-w": "tabs::CloseActiveTab",
      "cmd-shift-w": "tabs::CloseOtherTabs",
      "cmd-alt-w": "tabs::CloseAllTabs"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-enter": "zqlz::ExecuteQuery",
      "ctrl-enter": "zqlz::ExecuteQuery",
      "cmd-shift-enter": "zqlz::ExecuteSelection",
      "cmd-shift-e": "zqlz::ExecuteSelection",
      "cmd-.": "zqlz::StopQuery",
      "cmd-shift-f": "query_editor::FormatQuery",
      "cmd-s": "query_editor::SaveQuery",
      "cmd-shift-s": "query_editor::SaveQueryAs",
      "ctrl-space": "query_editor::TriggerCompletion",
      "ctrl-alt-space": "query_editor::TriggerCompletion",
      "cmd-i": "query_editor::ShowHover",
      "cmd-shift-space": "query_editor::TriggerParameterHints",
      "f12": "query_editor::GoToDefinition",
      "shift-f12": "query_editor::FindReferences",
      "f2": "query_editor::RenameSymbol",
      "f1": "query_editor::ShowHover",
      "f8": "query_editor::NextProblem",
      "shift-f8": "query_editor::PreviousProblem",
      "cmd-shift-m": "query_editor::ToggleProblemsPanel",
      "cmd-shift-.": "query_editor::ShowCodeActions"
    }
  },
  {
    "context": "TableViewerPanel",
    "bindings": {
      "cmd-s": "table_viewer::CommitChanges",
      "cmd-e": "table_viewer::OpenRowEditor",
      "escape": "table_viewer::CancelCellEditing",
      "backspace": "table_viewer::DeleteSelectedRows",
      "delete": "table_viewer::DeleteSelectedRows"
    }
  }
]
