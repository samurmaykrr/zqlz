[
  {
    "bindings": {
      "ctrl-,": "zqlz::OpenSettings",
      "alt-f4": "zqlz::Quit",
      "ctrl-r": "zqlz::Refresh"
    }
  },
  {
    "context": "MainView",
    "bindings": {
      "ctrl-n": "zqlz::NewQuery",
      "ctrl-shift-n": "zqlz::NewConnection",
      "ctrl-enter": "zqlz::ExecuteQuery",
      "ctrl-b": "zqlz::ToggleLeftSidebar",
      "ctrl-shift-b": "zqlz::ToggleRightSidebar",
      "ctrl-j": "zqlz::ToggleBottomPanel",
      "ctrl-1": "zqlz::FocusSidebar",
      "ctrl-2": "zqlz::FocusEditor",
      "ctrl-3": "zqlz::FocusResults",
      "ctrl-shift-]": "tabs::ActivateNextTab",
      "ctrl-shift-[": "tabs::ActivatePrevTab",
      "ctrl-w": "tabs::CloseActiveTab",
      "ctrl-shift-w": "tabs::CloseOtherTabs",
      "ctrl-k ctrl-w": "tabs::CloseTabsToRight",
      "ctrl-alt-w": "tabs::CloseAllTabs"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-enter": "zqlz::ExecuteQuery",
      "f5": "zqlz::ExecuteQuery",
      "ctrl-shift-enter": "zqlz::ExecuteSelection",
      "ctrl-shift-e": "zqlz::ExecuteSelection",
      "ctrl-.": "zqlz::StopQuery",
      "ctrl-shift-.": "query_editor::ShowCodeActions",
      "ctrl-shift-f": "query_editor::FormatQuery",
      "ctrl-s": "query_editor::SaveQuery",
      "ctrl-shift-s": "query_editor::SaveQueryAs",
      "ctrl-space": "query_editor::TriggerCompletion",
      "ctrl-shift-space": "query_editor::TriggerParameterHints",
      "f12": "query_editor::GoToDefinition",
      "shift-f12": "query_editor::FindReferences",
      "f2": "query_editor::RenameSymbol",
      "f1": "query_editor::ShowHover",
      "f8": "query_editor::NextProblem",
      "shift-f8": "query_editor::PreviousProblem",
      "ctrl-shift-m": "query_editor::ToggleProblemsPanel"
    }
  },
  {
    "context": "TableViewerPanel",
    "bindings": {
      "ctrl-s": "table_viewer::CommitChanges",
      "ctrl-e": "table_viewer::OpenRowEditor",
      "escape": "table_viewer::CancelCellEditing",
      "backspace": "table_viewer::DeleteSelectedRows",
      "delete": "table_viewer::DeleteSelectedRows"
    }
  }
]
